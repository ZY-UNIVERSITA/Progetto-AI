{
  "general_settings": {
    "seed": 42,
    "device": "cuda",
    "crop": false,
    "split": false,
    "data_aug": true
  },
  "data_settings": {
    "type": "CNN",
    "directory": {
      "general_dir": "data",
      "input_dir": "input",
      "output_dir": "output",
      "dataset_dir": "dataset"
    },
    "dataset": {
      "train_dir": "train",
      "train_dir_aug": "train_aug",
      "val_dir": "val",
      "test_dir": "test",
      "split_value": {
        "train": 0.7,
        "val": 0.15,
        "test": 0.15
      }
    },
    "img_size": 64,
    "batch_size": 32,
    "num_workers": 0,
    "grey": true
  },
  "data_augmentation": {
    "copies": 10,
    "random_affine": true,
    "random_perspective": true,
    "random_elastic": false,
    "random_color_jitter": true,
    "random_sharpness": true,
    "random_apply": true,
    "random_contrast": false,
    "random_equalize": false,
    "random_erasing": true
  },
  "model": {
    "name": "custom_cnn",
    "backbone": "classic_cnn_v0",
    "pretrained": {
      "path": "saved_model",
      "freeze_backbone": true
    },
    "dropout": 0.5,
    "activation": "relu"
  },
  "loss": {
    "type": "cross_entropy"
  },
  "metrics": [
    "accuracy",
    "f1"
  ],
  "train": {
    "epochs": 200,
    "optimizer": {
      "type": "AdamW",
      "lr": 0.0005,
      "weight_decay": 0.0001
    },
    "scheduler": {
      "type": "StepLR",
      "step_size": 30,
      "gamma": 0.1,
      "warmup_epochs": 5
    },
    "early_stopping": {
      "patience": 15,
      "monitor": "val_loss",
      "mode": "min"
    }
  },
  "checkpoint": {
    "dir": "checkpoints/",
    "save_best_only": true,
    "keep_top": 3
  },
  "logging": {
    "tensorboard": true
  }
}